<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_http"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="http"
                />
            <Button
                android:id="@+id/btn_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dialog"
                />

            <Button
                android:id="@+id/btn_toasty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toasty"
                />
            <Button
                android:id="@+id/btn_json"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UItouch"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_databing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DataBinding"
                />

            <Button
                android:id="@+id/btn_sidebar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SideBar"
                />

            <Button
                android:id="@+id/btn_kotlin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kotlin"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <com.ebrightmoon.ui.view.CustomEditText
                android:id="@+id/etNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="6"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="0afdddfsafdsdafdfdfffaf66666sddfa"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:ems="6"
                android:maxLines="1"
                android:lines="1"
                android:text="dsafdfs66666666adfafds" />
        </LinearLayout>







    </LinearLayout>

</ScrollView>