<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <Button
            android:id="@+id/btn_dialog_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialog"

            />
        <Button
            android:id="@+id/btn_dialog_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialog1"/>
        <Button
            android:id="@+id/btn_dialog_fragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialog2"
            />

        <Button
            android:id="@+id/btn_dialog_fragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dialog3"
            />

        <Button
            android:id="@+id/btn_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="popwindow"
            />

        <Button
            android:id="@+id/btn_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Dialog"
            />

        <Button
            android:id="@+id/btn_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="WebView"
            />
        </LinearLayout>
    </ScrollView>


</LinearLayout>