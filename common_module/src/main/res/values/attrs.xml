<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ColorTrackView">
        <attr name="ctvText" format="string" />
        <attr name="ctvText_size" format="dimension" />
        <attr name="ctvText_origin_color" format="color" />
        <attr name="ctvText_change_color" format="color" />
        <attr name="ctvProgress" format="float" />
        <attr name="ctvDirection" format="integer" />
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean" />
        <attr name="ios" format="boolean" />
        <attr name="leftSwipe" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RealtimeBlurView">
        <attr name="realtimeBlurRadius" format="dimension"/>
        <attr name="realtimeDownsampleFactor" format="float"/>
        <attr name="realtimeOverlayColor" format="color"/>
    </declare-styleable>




    <!--流式布局-->
    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"></attr>
        <attr name="max_select" format="integer"></attr>
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>